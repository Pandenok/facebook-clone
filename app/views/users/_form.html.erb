<%= simple_form_for @user do |f| %>
  <div class="flex justify-between">
    <span class="font-semibold text-xl">
      Profile Picture
    </span>
    <%= f.error :avatar, class: "text-red-500 font-semibold" %>
    <label class="px-3 py-2 text-lblue hover:bg-gray-100 hover:rounded-md cursor-pointer">
      <span class="hidden">
        <%= f.file_field :avatar, accept: 'image/jpg, image/jpeg, image/png' %>
      </span>
      Add
    </label>
  </div>
  <%= image_tag avatar_for(current_user, 176), class: "mx-auto object-cover w-44 h-44 border-2 border-gray-200 rounded-full" %>
  
  <div class="flex justify-between pt-5 pb-2">
    <span class="font-semibold text-xl">
      Cover Photo
    </span>
    <%= f.error :cover_photo, class: "text-red-500 font-semibold" %>
    <label class="px-3 py-2 text-lblue hover:bg-gray-100 hover:rounded-md cursor-pointer">
      <span class="hidden">
        <%= f.file_field :cover_photo, accept: 'image/jpg, image/jpeg, image/png' %>
      </span>
      Add
    </label>
  </div>
  <div class="w-3/4 h-40 bg-gray-100 m-auto rounded-lg">
    <% if @user.cover_photo.attached? %>
      <%= image_tag @user.cover_photo, class: "object-cover w-full h-full rounded-lg" %>
    <% end %>
  </div>

  <div class="pt-5 pb-2 font-semibold text-xl">
    Bio
  </div>
  <div class="flex justify-center text-gray-600">
    <%= f.text_area :bio,
                    label: false,
                    rows: 2,
                    maxlength: 101,
                    placeholder: "Describe yourself...",
                    class: "w-5/6 mx-auto p-2 bg-white resize-none text-center placeholder-gray-600 align-middle overflow-y-hidden rounded-lg" %>
  </div>

  <div class="pt-5 pb-2 font-semibold text-xl">
    Customize Your Intro
  </div>
  <div class="relative text-gray-500">
    <%= f.input :workplace,
                label: false,  
                placeholder: "Workplace", 
                input_html: { class: "w-full h-10 pl-10 pr-3 text-base placeholder-gray-800 bg-white" } %>
    <div class="absolute inset-y-0 left-0 flex items-center px-2 pointer-events-none">              
      <svg class="w-6 h-6 mr-2 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z" clip-rule="evenodd" />
        <path d="M2 13.692V16a2 2 0 002 2h12a2 2 0 002-2v-2.308A24.974 24.974 0 0110 15c-2.796 0-5.487-.46-8-1.308z" />
      </svg>
    </div>
  </div>

  <div class="relative text-gray-500">
    <%= f.input :hometown,
                label: false,  
                placeholder: "Hometown", 
                input_html: { class: "w-full h-10 pl-10 pr-3 text-base placeholder-gray-800 bg-white" } %>
    <div class="absolute inset-y-0 left-0 flex items-center px-2 pointer-events-none">              
      <svg class="w-6 h-6 mr-2 fill-current" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 1000 1000" enable-background="new 0 0 1000 1000" xml:space="preserve">
