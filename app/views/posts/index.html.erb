<div class="min-h-screen flex flex-col bg-lgray">
  <h1>All Posts</h1>

  <div class="lg:w-1/3 mb-4 bg-white border border-gray-200 min-w-xs overflow-hidden rounded-lg shadow">
    <div class="px-4 pt-3 pb-2">
      <div class="flex mb-3">
        <div class="flex">
          <img class="object-cover w-10 h-10 mr-2.5 rounded-full border" src="https://scontent-fco1-1.xx.fbcdn.net/v/t1.30497-1/cp0/c12.0.40.40a/p40x40/84241059_189132118950875_4138507100605120512_n.jpg?_nc_cat=1&ccb=2&_nc_sid=7206a8&_nc_ohc=02k-Raa85_sAX88_QOT&_nc_ht=scontent-fco1-1.xx&tp=27&oh=6ab026268e92ba2c2231e4af6fb4ebd4&oe=5FEEEF9E" alt="Profile image"/>
        </div>
        <%= link_to new_post_path, class: "flex flex-1 rounded-3xl bg-gray-100 hover:bg-gray-200" do %>
          <div class="text-base text-secondarygray pl-3 pt-2">
            What's on your mind, <%= current_user.firstname %>?
          </div>
        <% end %>
      </div>
      <div class="flex justify-evenly border-t border-gray-300 pt-2 leading-8 text-secondarygray">
        <button class="flex-1 hover:bg-gray-100 rounded-lg py-1">
          <svg class="inline w-8 h-8 mb-1 text-newred fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          <span class="font-semibold">Live Video</span>
        </button>
        <button class="flex-1 hover:bg-gray-100 rounded-lg py-1">
          <svg class="inline w-8 h-8 mb-1 text-lgreen fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span class="font-semibold">Photo/Video</span>
        </button>
        <button class="flex-1 hover:bg-gray-100 rounded-lg py-1">
          <svg class="inline w-8 h-8 mb-1 text-yellow-400 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 100-2 1 1 0 000 2zm7-1a1 1 0 11-2 0 1 1 0 012 0zm-.464 5.535a1 1 0 10-1.415-1.414 3 3 0 01-4.242 0 1 1 0 00-1.415 1.414 5 5 0 007.072 0z" clip-rule="evenodd" />
          </svg>
          <span class="font-semibold">Feeling/Activity</span>
        </button>
      </div>
    </div>
  </div>

  <% @posts.each do |post| %>
    <div class="lg:w-1/3 mb-4 bg-white border border-gray-200 min-w-xs overflow-hidden rounded-lg shadow">
      <div class="px-4 py-2">
        <div class="flex">
          <div class="flex">
            <img class="object-cover w-10 h-10 mr-2.5 rounded-full border" src="https://scontent-fco1-1.xx.fbcdn.net/v/t1.30497-1/cp0/c12.0.40.40a/p40x40/84241059_189132118950875_4138507100605120512_n.jpg?_nc_cat=1&ccb=2&_nc_sid=7206a8&_nc_ohc=02k-Raa85_sAX88_QOT&_nc_ht=scontent-fco1-1.xx&tp=27&oh=6ab026268e92ba2c2231e4af6fb4ebd4&oe=5FEEEF9E" alt="Profile image"/>
          </div>
          <div class="flex flex-1 flex-col">
            <div class="text-base font-semibold">
              <%= User.find(post.user_id).firstname + ' ' + User.find(post.user_id).lastname %>
            </div>
            <div class="text-sm font-normal text-secondarygray">
              <%= time_ago_in_words(post.created_at) %>
            </div>
          </div>

          <div class="dropdown inline-block relative">
            <button class="hover:bg-gray-100 py-2 px-2 rounded-full">
              <svg class="inline self-center w-6 h-6 text-secondarygray fill-current" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" />
              </svg>
            </button>
            <div class="dropdown-menu hidden absolute right-0 w-64 py-2 bg-white rounded-lg border shadow-xl">
              <%= link_to edit_post_path(post), class: "block mx-2 px-2 py-2 rounded-md hover:bg-lgray" do %>
                <svg class="inline w-5 h-5 mb-1 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                </svg>
                <span class="">Edit post</span>
              <% end %>
              <%= link_to post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "block mx-2 px-2 py-2 rounded-md hover:bg-lgray" do %>
                <svg class="inline w-5 h-5 mb-1 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                <span class="">Delete post</span>
              <% end %>
            </div>
          </div>
        </div>
        <p class="leading-normal pt-1 mb-2">
          <%= post.body %>
        </p>

        <% if post.likes.any? || post.comments.any? %>
          <div class="flex space-between items-center mb-2 text-secondarygray">
            <% if post.likes.any? %>
              <div class="flex">
                <%= render partial: 'likes/like_details', locals: { post: post } %>
              </div>
            <% end %>
            <% if post.comments.any? %>
              <div class="flex ml-auto text-sm">
                <%= post.comments.count %> 
                <%= post.comments.count == 1 ? "Comment" : "Comments" %>
              </div>
            <% end %>
          </div>
        <% end %>

        <div class="flex justify-around border-t border-b border-gray-300 py-1 leading-8 text-secondarygray">
          <%= render partial: 'likes/like_button', locals: { post: post } %>
          <button class="flex-1 hover:bg-gray-100 rounded">
            <svg class="inline w-6 h-6 mr-1 mb-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
            </svg>
            <span class="font-semibold">Comment</span>
          </button>
        </div>
        <%= render partial: 'comments/feed', locals: { post: post } %>
        <%= render partial: 'comments/form', locals: { post: post } %>
        <%# <div class="flex mt-2"> %>
          <%# <div class="">
            <img class="object-cover w-8 h-8 mr-2.5 border rounded-full" src="https://scontent-fco1-1.xx.fbcdn.net/v/t1.30497-1/cp0/c12.0.40.40a/p40x40/84241059_189132118950875_4138507100605120512_n.jpg?_nc_cat=1&ccb=2&_nc_sid=7206a8&_nc_ohc=02k-Raa85_sAX88_QOT&_nc_ht=scontent-fco1-1.xx&tp=27&oh=6ab026268e92ba2c2231e4af6fb4ebd4&oe=5FEEEF9E" alt="Profile image"/>
          </div> %>
          <%# <div class="flex flex-1 rounded-2xl bg-gray-100"> %>
            <%# <div class="text-base text-secondarygray pl-4 pt-1">
              Write a comment...
            </div> %>
          <%# </div> %>
        <%# </div> %>
      </div>
    </div>
  <% end %>
</div>